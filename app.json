{
  "expo": {
    "name": "Digital House",
    "slug": "digital-house",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/mobile_app/assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/mobile_app/assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B1220"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Digital House needs access to your photos so you can choose images and videos for posts.",
        "NSMicrophoneUsageDescription": "Digital House may use the microphone when recording video.",
        "NSCameraUsageDescription": "Digital House needs camera access to take photos or videos for posts."
      },
      "bundleIdentifier": "com.anonymous.digital-house"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/mobile_app/assets/adaptive-icon.png",
        "backgroundColor": "#0B1220"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./src/mobile_app/assets/favicon.png"
    }
  }
}
